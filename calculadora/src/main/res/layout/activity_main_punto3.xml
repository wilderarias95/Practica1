<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    android:orientation="vertical"
    tools:context="com.wilderarias.calculadora.MainActivityPunto3">

    <EditText
        android:id="@+id/eres"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="end|center"
        android:hint="0"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bdel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"
            />

        <Button
            android:id="@+id/bdiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="soluOperacion"
            android:text="/"
            android:textSize="45sp" />

        <Button
            android:id="@+id/bpro"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="*"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

        <Button
            android:id="@+id/breg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="&lt;"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"
            />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"
            />

        <Button
            android:id="@+id/bsum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

        <Button
            android:id="@+id/bres"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="-"
            android:textSize="65sp"
            android:onClick="soluOperacion"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

        <Button
            android:id="@+id/bpun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="."
            android:textSize="65sp"
            android:onClick="soluOperacion"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">


        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="35sp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:onClick="soluOperacion"/>

        <Button
            android:id="@+id/bigu"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/colorPrimary"
            android:text="="
            android:textSize="55sp"
            android:onClick="soluOperacion"/>

    </LinearLayout>

</LinearLayout>
